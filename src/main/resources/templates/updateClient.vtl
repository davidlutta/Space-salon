<h2 class="header">Edit Client:</h2>
<br>
<br>
<br>
<form action="/client/$client.getId()/update" method="post">
    <label for="clientName">Name</label>
    <input id="clientName" name="clientName" type="text" placeholder="$client.getClientName()">
    <label for="clientStyle">Style</label>
    <input id="clientStyle" name="clientStyle" type="text" placeholder="$client.getClientStyle()">
    <button type="submit">Update Client</button>
</form>